<odoo>
    <record id="paperformat_euro_portrait" model="report.paperformat">
        <field name="name">European A4 Portrait</field>
        <field name="default" eval="True"/>
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">23</field>
        <field name="margin_left">15</field>
        <field name="margin_right">15</field>
        <field name="header_line" eval="True"/>
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>

    <report id="action_report_informacion"
            string="Listaxe de InformaciÃ³n"
            model="odoo_basico.informacion" report_type="qweb-pdf"
            name="odoo_basico.report_informacion_template"
            paperformat="paperformat_euro_portrait"
    />
    <template id="report_informacion_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="container">
                        <table class="table table-sm">
                            <thead>
                                <tr class="bg-primary">
                                    <th class="text-left">Name</th>
                                    <th class="text-left">Peso</th>
                                    <th class="text-left">Autoriz</th>
                                    <th class="text-left">Datas</th>
                                    <th class="text-left">Sexo</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="o">
                                    <tr>
                                        <td class="text-left">
                                            <h5>
                                                <span t-field="o.name"/>
                                            </h5>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.peso"/>
                                        </td>
                                        <td class="text-left">
                                            <t t-if="o.autorizado == True">
                                                <span>SI</span>
                                            </t>
                                            <t t-else="">
                                                <span>NON</span>
                                            </t>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.data"/>
                                            <span>-</span>
                                            <span t-field="o.data_hora"/>
                                        </td>
                                        <td class="text-left">
                                            <span t-field="o.sexo_traducido"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>